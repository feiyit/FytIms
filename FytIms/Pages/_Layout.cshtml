<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/layui/css/layui.css" asp-append-version="true" />
    <environment include="Development">
        <link rel="stylesheet" href="~/themes/css/toastr.css" />
        <link rel="stylesheet" href="~/themes/css/app.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/themes/css/toastr.min.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/themes/css/app.min.css" asp-append-version="true" />
    </environment>
</head>
<body>
    @RenderBody()
    <script src="~/themes/js/jquery.min.js" asp-append-version="true"></script>
    <script src="~/layui/layui.js" asp-append-version="true"></script>
    <environment include="Development">
        <script src="~/themes/js/toastr.js"></script>
        <script src="~/themes/js/app.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/themes/js/toastr.min.js"></script>
        <script src="~/themes/js/app.min.js"></script>
    </environment>
    @RenderSection("Scripts", required: false)
</body>
</html>
